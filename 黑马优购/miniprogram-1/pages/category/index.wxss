.cates_container{
  height: calc( 100vh - 90rpx );
  display: flex;
}
.category-left{
  flex: 2;
}
.left-item{
  background-color: #f4f4f4;
  border-bottom: 2rpx solid #d9d9d9;
}
.category-left .active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
  background-color: #ffffff;
}
.category-left view{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category-right{
  flex: 5;
}
.goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-top: 30rpx;
}
.delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.goods_list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
.goods_list navigator {
  width: 33.33%;
  text-align: center;
  margin-top: 40rpx;
}
.goods_list navigator image {
  width: 50%;
}