/* pages/goods_list/index.wxss */

.goods_item{
  display: flex;
  border-top: 1px solid #ccc;
}
.goods_img_wrap{
  flex: 2;
  display: flex;
  justify-self: center;
  align-content: center;
} 
.goods_img_wrap image{
  width: 70%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  padding-right: 6rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}